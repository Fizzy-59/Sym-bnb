{% extends 'base.html.twig' %}

{% block title %} Création d'une annonce {% endblock %}

{% form_theme form _self %}

{% block body %}

    <diV class="container">

        <h1>Créer une nouvelle annonce</h1>

        {{ form_start(form)}}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary"> Créer la nouvelle annonce. </button>

        {{ form_end(form) }}

    </diV>

{% endblock %}

{% block _ad_images_widget %}

    <p>Ici, vous pouvez ajouter vos propres images ! </p>

    {{ form_widget(form) }}

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajoutez une image.</button>
    </div>

{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widgets %}

    <div class="form-group">
        <div class="row">
            <div class="col">
                {{ form_widget(form.url) }}
            </div>

            <div class="col">
                {{ form_widget(form.caption) }}
            </div>
        </div>
    </div>

{% endblock %}